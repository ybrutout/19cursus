NAME = megaphone

CC = clang++

CPPFLAGS = -Wall -Wextra -Werror -std=c++98

SRC =	megaphone.cpp

all:
	$(CC) $(CPPFLAGS) $(SRC) -o $(NAME)
clean:
	@rm -f megaphone

